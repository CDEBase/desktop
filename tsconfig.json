{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": false,
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./typings/*.d.ts",
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./typings/*.d.ts"
  ],
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "node_modules"
  ]
}
