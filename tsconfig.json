{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2022"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "pretty": true,
    "removeComments": false,
    "outDir": ".erb/dll",
    "skipLibCheck": true,
    "typeRoots": [
      "./**/*.d.ts",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "node_modules"
  ]
}
